<project name="Impact" default="default" basedir=".">
    <description>Builds, tests, and runs the ImpactVL project.</description>
    <property name="fork"                value="true"/>    <!-- note that Netbeans default path is built in and has to be overridden by going to     -->
    <taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
    <property name="impact.jar"     value="impact.jar"/>
    <property name="javac.verbose"              value="true"/>
    <property name="java.classes.dir"        value="impact"/>
    <target name="all" depends="default,impact"/>

    <target name="default">
		<javac  srcdir="impact"
			   destdir="impact"
			 classpath="impact.jar;.;images"
		 includeantruntime="false"
			   verbose="${javac.verbose}"
			   fork="${fork}">
		</javac>
    </target>
    <target name="impact" depends="default">
        <java classname="impact.Impact" classpath="impact.jar;.;images" fork="${fork}">
	</java>
    </target>
    <target name="Cell" depends="default">
	<java classname="impact.Cell" classpath="impact.jar;.;images" fork="${fork}">
	</java>
    </target>
    <target name="Cell4x4" depends="default">
	<java classname="impact.Cell" classpath="impact.jar;.;images" fork="${fork}">
		<arg value="4x4"/>
	</java>
    </target>
</project>
